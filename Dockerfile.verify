# syntax=docker/dockerfile:1
FROM python:3.11-slim AS base

LABEL maintainer="you@blockchain.dev"
LABEL description="Blockchain Release Verifier (Ed25519 + SHA256)"

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

WORKDIR /app

COPY scripts/verify_manifest.py /app/verify_manifest.py

RUN pip install --no-cache-dir pynacl

ENTRYPOINT ["python3", "/app/verify_manifest.py"]
CMD ["--help"]
